{
    "name": "kilowhat/flarum-ext-guest-posting",
    "description": "Enable guest posting",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^0.1.0-beta.16"
    },
    "authors": [
        {
            "name": "Clark Winkelmann",
            "email": "clark.winkelmann@gmail.com",
            "homepage": "https://clarkwinkelmann.com/",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Alter\\GuestPosting\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Guest Posting",
            "category": "feature",
            "icon": {
                "name": "fas fa-user-secret",
                "backgroundColor": "#684ba6",
                "color": "#fff"
            },
            "optional-dependencies": [
                "fof/polls"
            ]
        }
    }
}
