{
    "name": "convo-extensions/flarum-ext-guest-posting",
    "description": "Anonymous, permission-based guest posting extension for Flarum",
    "keywords": [
        "flarum", "guest"
    ],
    "type": "flarum-extension",
    "license": "GPL-3.0-only",
    "require": {
        "flarum/core": "^1.0"
    },
    "require-dev": {
        "flarum/mentions": "*",
        "fof/polls": "*"
    },
    "authors": [
        {
            "name": "convo-extensions",
            "email": "daniel@overview.co.il",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Alter\\GuestPosting\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Guest Posting",
            "category": "feature",
            "icon": {
                "name": "fas fa-user-secret",
                "backgroundColor": "#062871",
                "color": "#fff"
            },
            "optional-dependencies": [
                "flarum/mentions",
                "fof/polls"
            ]
        }
    }
}
